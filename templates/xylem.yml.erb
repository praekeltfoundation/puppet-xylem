queues:
<%- if @gluster -%>
    - name: gluster
      plugin: seed.xylem.gluster
      gluster_mounts:
        <%- @gluster_mounts.each do |mp| -%>
        - <%= mp %>
        <%- end -%>
      gluster_nodes:
        <%- @gluster_nodes.each do |node| -%>
        - <%= node %>
        <%- end -%>
      <%- if @gluster_replica then -%>
      gluster_replica: <%= @gluster_replica %>
      <%- end -%>
      <%- if @gluster_stripe then -%>
      gluster_stripe: <%= @gluster_stripe %>
      <%- end -%>
<%- end -%>

<%- if @postgres -%>
    - name: postgres
      plugin: seed.xylem.postgres
      key: <%= @postgres_secret %>
      servers:
          - hostname: <%= @postgres_host %>
            username: <%= @postgres_user %>
            <%- if @postgres_password -%>
            password: <%= @postgres_password %>
            <%- end -%>
<%- end -%>
